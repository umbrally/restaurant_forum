<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td class="text-danger">admin</td>
      {{else}}
      <td>user</td>
      {{/if}}
      {{!-- <td>{{#if this.isAdmin}}admin {{else}} user {{/if}}</td> --}}
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link">Set as {{#if this.isAdmin}} user {{else}} admin {{/if}}</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>